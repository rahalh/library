{
  "PostgreSQL": {
    "ConnectionString": "Server=localhost;Port=5432;Database=media;User Id=postgres;Password=root;"
  },
  "Redis": {
    "ConnectionString": "localhost:6380,defaultDatabase=0,abortConnect=false"
  },
  "Kafka": {
    "ConnectionString": "localhost:9092"
  },

  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Media API"
    }
  }
}
