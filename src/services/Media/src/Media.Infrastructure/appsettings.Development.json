{
  "ConnectionStrings": {
    "PostgreSQL": "Server=localhost;Port=5431;Database=media;User Id=postgres;Password=root;",
    "Redis": "redis:6380,defaultDatabase=0,abortConnect=false",
    "Kafka": "kafka:9092"
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Media API"
    }
  }
}
